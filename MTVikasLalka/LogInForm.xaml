        <TextBox x:Name="txtPW" HorizontalAlignment="Left" Height="39" Margin="93.4,22.8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Grid.ColumnSpan="2" FontSize="16" Grid.Row="1" Grid.Column="2"/>
        <Button x:Name="btnLogIn" Content="Login" HorizontalAlignment="Left" Margin="188.4,93.8,0,0" VerticalAlignment="Top" Width="109" Click="button_Click" Height="34" FontSize="16" Background="#FF362EB3" Foreground="#FFF6F6F6" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
