<Window x:Class="MTVikasLalka.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTVikasLalka"
        mc:Ignorable="d"
        Title="LogInForm" Height="307.64" Width="378.807" Background="LightGray">
    <Grid Margin="0,0,12.8,4.4" OpacityMask="#FF913131">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="166.4"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="LogIn Form" HorizontalAlignment="Left" Margin="21,21,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Height="53" Width="163" Grid.ColumnSpan="3"/>
        <Label x:Name="label_Copy" Content="Username : " HorizontalAlignment="Left" Margin="0.4,79,0,0" VerticalAlignment="Top" Height="39" Width="108" FontSize="16" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2"/>
